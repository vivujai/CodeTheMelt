{
  "name": "ice-sheet-visualization-frontend",
  "version": "1.0.0",
  "description": "Frontend for Ice Sheet Visualization System with comprehensive error handling",
  "main": "js/main.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "serve": "python -m http.server 3000",
    "lint": "eslint js/**/*.js"
  },
  "keywords": [
    "ice-sheet",
    "visualization",
    "error-handling",
    "retry-logic",
    "frontend"
  ],
  "author": "Ice Sheet Visualization Team",
  "license": "MIT",
  "devDependencies": {
    "jest": "^29.0.0",
    "eslint": "^8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/main.js"
    ]
  }
}
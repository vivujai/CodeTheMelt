{
  "name": "ice-sheet-visualization-frontend",
  "version": "1.0.0",
  "description": "Frontend for Ice Sheet Visualization System",
  "main": "js/main.js",
  "scripts": {
    "start": "http-server . -p 3000 -c-1",
    "test": "jest --run",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint js/**/*.js",
    "serve": "python -m http.server 3000"
  },
  "keywords": [
    "ice-sheet",
    "visualization",
    "climate",
    "frontend"
  ],
  "author": "Ice Sheet Visualization Team",
  "license": "MIT",
  "devDependencies": {
    "jest": "^28.1.0",
    "fast-check": "^3.0.0",
    "eslint": "^8.0.0",
    "http-server": "^14.1.0",
    "@jest/globals": "^28.1.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/main.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}